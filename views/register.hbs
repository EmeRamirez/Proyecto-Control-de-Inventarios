{{#> layoutapp}}
<link rel="stylesheet" type="text/css" href="src/scss/register.css"/>

<div class="app">
    
  <div class="header-app">
    <div class="header-app-info">
      {{#unless isMaster}}
      <p class="header-subtitle">{{cerveceria}}</p>
      <h4 class="header-title">Dashboard</h4>
      {{/unless}}
      {{#if isMaster}}
      <p class="header-subtitle">Admin</p>
      <h4 class="header-title">Dashboard</h4>
      {{/if}}
    </div>
    <div class="header-app-panel">
      <!-- MENU DROPDOWN DESKTOP -->
      <div class="dropdown dropdown-desk">
          <button class="btn btn-secondary dropdown-toggle log-dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              Hola {{capitalizar nombre}}
          </button>
          <i class="fa-solid fa-user user-login user-login-desk" style="font-size: 20px; letter-spacing: 0.3vw; color:white"></i>
          <ul class="dropdown-menu">
              {{#if isMaster}}
                  <li><a class="dropdown-item" href="/regicerv">Registrar Cerveceria</a></li>
              {{/if}}
              {{#if isAdmin}}    
                  <li><a class="dropdown-item" href="/register">Registrar Usuario</a></li>
              {{/if}}
                  <li><a class="dropdown-item" href="/logout">Cerrar Sesión</a></li>
          </ul>
      </div>

      <!-- MENU DROPDOWN MOBILE -->
      <div class="dropdown dropdown-celu">
          <button class="btn btn-secondary dropdown-toggle log-dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fa-solid fa-user user-login" style="font-size: 20px; letter-spacing: 0.3vw; color:white"></i>
          </button>
          <ul class="dropdown-menu">
                {{#if isMaster}}
                  <li><a class="dropdown-item" href="/regicerv">Registrar Cerveceria</a></li>
              {{/if}}
              {{#if isAdmin}}    
                  <li><a class="dropdown-item" href="/register">Registrar Usuario</a></li>
              {{/if}}
                  <li><a class="dropdown-item" href="/logout">Cerrar Sesión</a></li>
          </ul>
      </div>
    </div>
  </div>

  <div class="body-app">
    <!-- MENU PRINCIPAL DESKTOP -->
    <div class="menu-desk">
        <a href="app"><i class="fa-solid fa-house fa-2xl optionselected"></i></a>
        <a href="inventariomob"><i class="fa-solid fa-folder-tree fa-2xl"></i></a>
        <a href="informe"><i class="fa-solid fa-chart-line fa-2xl"></i></a>
        <i class="fa-solid fa-qrcode fa-2xl"></i>
    </div>
    <div class="body-container">
          
      <div class="form_wrapper">
        <div class="form_container">
          <div class="title_container">
            {{#unless isMaster}}
            <h2>Nuevo Usuario {{cerveceria}}</h2>
            {{/unless}}
            {{#if isMaster}}
              <h2>Nuevo Usuario</h2>
            {{/if}}
          </div>
          <div class="row clearfix">
            <div class="">
              <form method="POST" action="/register">
                <div class="input_field"> <span><i aria-hidden="true" class="fa fa-envelope"></i></span>
                  <input type="email" name="email" placeholder="Correo electrónico" required />
                </div>
                <div class="input_field"> <span><i aria-hidden="true" class="fa fa-lock"></i></span>
                  <input type="password" name="password" placeholder="Contraseña" required />
                </div>
                <div class="input_field"> <span><i aria-hidden="true" class="fa fa-lock"></i></span>
                  <input type="password" name="password" placeholder="Confirme contraseña" required />
                </div>
                <div class="row clearfix">
                  <div class="col_half">
                    <div class="input_field"> <span><i aria-hidden="true" class="fa fa-user"></i></span>
                      <input type="text" name="name" placeholder="Nombre" />
                    </div>
                  </div>
                  <div class="col_half">
                    <div class="input_field"> <span><i aria-hidden="true" class="fa fa-user"></i></span>
                      <input type="text" name="lastname" placeholder="Apellido" required />
                    </div>
                  </div>
                </div>
                    <div class="input_field select_option">
                      <select name="rolus" required>
                        <option value="">Seleccione un rol de usuario</option>
                        <option value='3'>Usuario</option>
                        <option value='2'>Administrador</option>
                      </select>
                      <div class="select_arrow"></div>
                    </div>
                    {{#if isMaster}}
                    <div class="input_field select_option">
                      <select name="cervus" required>
                        <option value="">Seleccione una Cervecería</option>
                        {{#each cervList}}
                          {{>cervlist}}
                        {{/each}}
                      </select>
                      <div class="select_arrow"></div>
                    </div>
                    {{/if}}
                    {{#if error}}
                      <div style="text-align: center; margin-bottom: 15px"><span id="mensaje-login">{{error}}</span></div>
                    {{/if}}
                <input class="button" type="submit" value="Registrar" />
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="appfooterspace">
      <div class="foot-menu" style="background-color: #1B232A;"></div>
      <div><p></p></div>
  </div>

  <!-- MENU PRINCIPAL MOBILE -->
  <div class="menu-celu">
      <a href="app"><i class="fa-solid fa-house fa-2xl optionselected"></i></a>
      <a href="inventariomob"><i class="fa-solid fa-folder-tree fa-2xl"></i></a>
      <a href="informe"><i class="fa-solid fa-chart-line fa-2xl"></i></a>
      <i class="fa-solid fa-qrcode fa-2xl"></i>
  </div>  
</div>

{{/layoutapp}}