{{#> layout}}
<main>
     <!-- CONTENEDOR 1 -->
    <div class="contenedor-contacto">
        <div id="texto-contacto">
            <h1 style="color:rgb(116, 116, 116);padding-bottom: 1vw; font-size: 1.6rem;"> ¿Tienes alguna duda?</h1>
            <h1 class="contactate-form" >Contáctate con nosotros</h1>
            <h4 style="color:rgb(151, 149, 149);padding-top: 1vw; line-height: 32px;"> Rellena el formulario y te responderemos a la brevedad.</h4>
        </div>
        <div id="contenedor-formulario">
          <div class="row g-5" id="contenedor-formulario-interno">
                <div class="col-lg-12">
                  <form class="needs-validation" novalidate>
                    <div class="row g-3" style="width: 100%;">
                      <div class="col-lg-6">
                        <label for="firstName" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="firstName" placeholder="" value="" required>
                        <div class="invalid-feedback">
                          Ingrese un nombre.
                        </div>
                      </div>
          
                      <div class="col-lg-6">
                        <label for="lastName" class="form-label">Apellido</label>
                        <input type="text" class="form-control" id="lastName" placeholder="" value="" required>
                        <div class="invalid-feedback">
                          Ingrese un apellido.
                        </div>
                      </div>
          
                      <div class="col-lg-6">
                        <label for="email" class="form-label">Email</label>
                        <input type="text" class="form-control" id="email" placeholder="ejemplo@mail.com" value="" required>
                        <div class="invalid-feedback">
                          Ingrese un email válido.
                        </div>
                      </div>
          
                      <div class="col-lg-6">
                        <label for="lastName" class="form-label">Empresa <span class="text-muted">(Opcional)</span></label>
                        <input type="text" class="form-control" id="empresa" placeholder="" value="">
                      </div>
       
          
                      <div class="col-lg-12">
                        <label for="textarea" class="form-label">Mensaje</label>
                        <textarea class="form-control" id="textarea" placeholder="Ingrese un mensaje" rows="3" required></textarea>                        <div class="invalid-feedback">
                          Ingrese un mensaje.
                        </div>
                      </div>
                      
                    <hr class="my-4">
          
                    <!-- <div class="form-check">
                      <input type="checkbox" class="form-check-input" id="save-info">
                      <label class="form-check-label" for="save-info">Save this information for next time</label>
                    </div> -->
                    
                    <!-- Esta área debería aparecer o desaparecer si es que se envía el mail -->
                    <div id="notificacion-contacto" class="d-none">
                        <!-- Este mensaje se muestra si se envió el mail-->
                        <div class="notificacion-enviado">
                            <div><i class="fa-solid fa-check fa-xl"></i></div>
                            <div><h5 id="texto-notificacion">El mensaje se ha enviado exitosamente</h5></div>
                            <div><i onclick="cerrarMsjSuccess()" class="fa-solid fa-xmark fa-xl"></i></div>
                        </div>
                        <hr class="my-4">
                        <!-- Este mensaje se muestra si se envió el mail-->

                        <!-- Este mensaje se muestra si NO se envió el mail-->
                        <!-- <div class="notificacion-no-enviado d-none">
                            <div><i class="fa-solid fa-xmark fa-xl"></i></div>
                            <div><h5 id="texto-notificacion">El mensaje no se ha enviado, intenta más tarde</h5></div>
                            <button onclick="cerrarMsjSuccess()" type="button"><i class="fa-solid fa-xmark fa-xl"></i></button>
                        </div>
                        <hr class="my-4 d-none"> -->
                        <!-- Este mensaje se muestra si NO se envió el mail-->
                    </div>
                    <!-- Esta área debería aparecer o desaparecer si es que se envía el mail -->

          
                  </form>
                  <button class="w-100 btn btn-lg" type="button" id="boton-submit" onclick="enviarMail()">Enviar</button>

                </div>
              </div>
        </div>
    </div>
  </main>

{{/layout}}